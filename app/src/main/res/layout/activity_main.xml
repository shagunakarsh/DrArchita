<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drarchita.datecalculator.activities.MainActivity">


    <Button
        android:id="@+id/lmp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/LMP"
        app:layout_constraintStart_toStartOf="@+id/between_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/between_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/between_dates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lmp_button" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="@string/next_date"
        app:layout_constraintEnd_toEndOf="@+id/between_button"
        app:layout_constraintTop_toBottomOf="@+id/between_button" />


</android.support.constraint.ConstraintLayout>
